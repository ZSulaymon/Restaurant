@model IEnumerable<Restaurant.Models.Restaurant.ViewModels.RestInfoModels>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <li class="navbar-nav">
                <a  class="nav-link text-dark" asp-area="" asp-controller="RestMenus" asp-action="Create">Создать меню</a> 
             </li>
            <li class="navbar-nav">
                <a class="nav-link text-dark" asp-area="" asp-action="Create">Создать ресторан</a>
            </li>
        </ul>
     </div>


            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RestName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RestAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RestReferencePoint)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RestPhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RestAdministrator)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RestAdministrator)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RestName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RestAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RestReferencePoint)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RestPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RestAdministrator)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
}
                </tbody>
            </table>
</body>
</html>
