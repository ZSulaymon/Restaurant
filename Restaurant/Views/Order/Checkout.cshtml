@model Order
@{
    ViewData["Title"] = "Checkout";
}

<h1>Оформление заказа</h1>

<div class="row">     
    <br />
    <form asp-action="Checkout" method="post">
        <div class="text-danger">
            <input type="hidden" asp-for="Status" value="Обрабатывается" class="form-control" />

            @ViewBag.Message
        </div>
        <div class="form-inline">
            <div class="col-md-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <div> <span asp-validation-for="Name" class="text-danger"></span></div>
            </div>
            <div class="col-md-6">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" />
                <div> <span asp-validation-for="Surname" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-inline">
            <div class="col-md-6">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" />
                <div><span asp-validation-for="Phone" class="text-danger"></span></div>
            </div>

            <div class="col-md-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <div><span asp-validation-for="Email" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-inline">
            <div class="col-md-6">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <div><span asp-validation-for="Address" class="text-danger"></span></div>

            </div>
        </div>
 
        <br>
        <fieldset>

            <div class="form-inline">
                <div class="col-sm-4">
                    <div class="form-check">
                        <input asp-for="TypeOrder" class="form-check-input" type="radio" id="gridRadios1" value="Доставка">
                        <label class="form-check-label" for="gridRadios1">
                            Доставка
                        </label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-check">
                        <input asp-for="TypeOrder" class="form-check-input" type="radio" id="gridRadios2" value="Самовывоз">
                        <label class="form-check-label" for="gridRadios2">
                            Самовывоз
                        </label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-check">
                        <input asp-for="TypeOrder" class="form-check-input" type="radio" id="gridRadios3" value="Посидим">
                        <label class="form-check-label" for="gridRadios3">
                            Посидим
                        </label>
                    </div>
                </div>
                <div><span asp-validation-for="Email" class="text-danger"></span></div>
            </div>
        </fieldset>

        <br>
        <div class="form-inline">
            <div class="col-md-6">

            </div>
            <div class="col-md-6">
                <input class="btn btn-success" type="submit" value="Завершить заказ" />

            </div>
        </div>
    </form>

</div>



