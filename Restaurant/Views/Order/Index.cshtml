<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
 <br>
 <p>
     <a asp-action="ReadyOrders">Готовые заказы</a>
 </p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Orders.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.OrderTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestMenu.CoocingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestMenu.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.TypeOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Orders.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orders.OrderTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestMenu.CoocingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orders.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestMenu.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orders.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orders.TypeOrder)
            </td>
            <td>

                <form asp-action="Ready" asp-route-id="@item.OrderId">
                    @*<input type="hidden" asp-for="@item.OrderId" />*@
                    <input type="submit" value="Готово" class="btn btn-success" />
                    @* | *@
                    @*<a asp-action="Index">Back to List</a>*@
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
